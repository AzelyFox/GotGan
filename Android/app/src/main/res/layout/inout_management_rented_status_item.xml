<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inout_management_rented_status_name_textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inout_management_rented_status_product_name_textView"
        app:layout_constraintBottom_toTopOf="@id/inout_management_rented_status_start_date_textView"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="name"
        android:ellipsize="marquee" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inout_management_rented_status_product_name_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inout_management_rented_status_end_date_textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/inout_management_rented_status_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="marquee"
        android:text="product_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inout_management_rented_status_start_date_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inout_management_rented_status_name_textView"
        app:layout_constraintRight_toLeftOf="@id/inout_management_rented_status_special_mark"
        android:ellipsize="marquee"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inout_management_rented_status_special_mark"
        app:layout_constraintLeft_toRightOf="@id/inout_management_rented_status_start_date_textView"
        app:layout_constraintRight_toLeftOf="@id/inout_management_rented_status_end_date_textView"
        app:layout_constraintTop_toTopOf="@id/inout_management_rented_status_start_date_textView"
        app:layout_constraintBottom_toBottomOf="@id/inout_management_rented_status_start_date_textView"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="~"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inout_management_rented_status_end_date_textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inout_management_rented_status_product_name_textView"
        app:layout_constraintLeft_toRightOf="@id/inout_management_rented_status_special_mark"
        android:ellipsize="marquee"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/inout_management_rented_status_allow_button"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/inout_management_rented_status_start_date_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="100dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/check_return"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>